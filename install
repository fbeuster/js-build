#!/bin/bash

# install inotify-tools
sudo apt-get install inotify-tools

# copy files
sudo cp js-build /usr/local/bin/js-build
sudo cp js-build-watcher /usr/local/bin/js-build-watcher

# make root owner
sudo chown root:root /usr/local/bin/js-build
sudo chown root:root /usr/local/bin/js-build-watcher